@model Gym_Mgt_System.Models.Member

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Members";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <h4>Member's Details</h4>
            <form asp-action="SaveMember">
                <div class="mb-2">
                    <label asp-for="Name" class="control-label">Member's Name</label>
                    <input asp-for="Name" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Gender" class="control-label">Member's Gender</label>
                    <select asp-for="Gender" class="form-control">
                        <option value="">Select</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="DateOfBirth" class="control-label">Member's D.O.B</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" autocomplete="off" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="JoiningDate" class="control-label">Member's Joining D.O.B</label>
                    <input asp-for="JoiningDate" type="date" class="form-control" autocomplete="off" />
                    <span asp-validation-for="JoiningDate" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="MembershipPlan" class="control-label">Membership Plan</label>
                    <input asp-for="MembershipPlan" class="form-control" autocomplete="off" />
                    <span asp-validation-for="MembershipPlan" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Trainer" class="control-label">Trainer</label>
                    <input asp-for="Trainer" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Trainer" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="PhoneNumber" class="control-label">Member's Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" autocomplete="off" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Status" class="control-label">Status</label>
                    <select asp-for="Status" class="form-control">
                        <option value="">Select</option>
                        <option value="Pending">Pending</option>
                        <option value="Active">Active</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Add</button>
                    <button type="submit" class="btn btn-warning">Edit</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
        <div class="col-md-9">
            <!-- Add a table or grid to display members -->
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
