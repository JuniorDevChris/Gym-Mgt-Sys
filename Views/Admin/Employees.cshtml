@model Gym_Mgt_System.ViewModels.EmployeeViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Employees";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <h4>Employee's Details</h4>
            <form asp-controller="Employee" asp-action="Create" method="post" id="employeeForm">
                <input type="hidden" id="Id" asp-for="Id" />
                <input type="hidden" id="IsNewEmployee" name="IsNewEmployee" value="@((Model.Id == null) ? "true" : "false")" />
                <div class="mb-2">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" id="Name" autocomplete="off" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" autocomplete="off" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" id="Email" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="UserName" class="control-label">User Name</label>
                    <input asp-for="UserName" class="form-control" id="UserName" autocomplete="off" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Gender" class="control-label">Gender</label>
                    <input asp-for="Gender" class="form-control" id="Gender" autocomplete="off" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" name="action" value="Add" class="btn btn-primary" id="addButton">Add</button>
                    <button type="button" name="action" value="Delete" class="btn btn-danger" id="deleteButton">Delete</button>
                </div>
            </form>
        </div>
        <div class="col-md-9">
            <h4>Employee List</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>User Name</th>
                        <th>Gender</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model.Employees)
                    {
                        <tr onclick="populateForm('@employee.Id', '@employee.Name', '@employee.PhoneNumber', '@employee.Email', '@employee.UserName', '@employee.Gender')">
                            <td>@employee.Name</td>
                            <td>@employee.PhoneNumber</td>
                            <td>@employee.Email</td>
                            <td>@employee.UserName</td>
                            <td>@employee.Gender</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function populateForm(id, name, phone, email, username, gender) {
            document.getElementById("Id").value = id;
            document.getElementById("Name").value = name;
            document.getElementById("PhoneNumber").value = phone;
            document.getElementById("Email").value = email;
            document.getElementById("UserName").value = username;
            document.getElementById("Gender").value = gender;

            // Change button text to Save and Cancel
            document.getElementById("addButton").textContent = "Save";
            document.getElementById("addButton").value = "Save";
            document.getElementById("deleteButton").textContent = "Cancel";
            document.getElementById("deleteButton").value = "Cancel";
            document.getElementById("deleteButton").type = "button";
        }

        document.getElementById("deleteButton").addEventListener("click", function () {
            if (document.getElementById("deleteButton").value === "Cancel") {
                document.getElementById("employeeForm").reset();
                resetButtons();
            }
        });

        function resetButtons() {
            document.getElementById("addButton").textContent = "Add";
            document.getElementById("addButton").value = "Add";
            document.getElementById("deleteButton").textContent = "Delete";
            document.getElementById("deleteButton").value = "Delete";
            document.getElementById("deleteButton").type = "submit";
        }

        // Conditional client-side validation
        $(document).ready(function () {
            $('#employeeForm').submit(function (e) {
                var isNewEmployee = $('#IsNewEmployee').val() === 'true';
                if (isNewEmployee && $('#Password').val() === '') {
                    e.preventDefault();
                    $('#Password').next('.text-danger').text('The Password field is required.');
                }
            });
        });
    </script>
}
