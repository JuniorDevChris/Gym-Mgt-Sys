@model Gym_Mgt_System.Models.Trainer

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Trainers";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <h4>Trainer's Details</h4>
            <form asp-action="CreateOrDeleteTrainer" method="post" id="trainerForm">
                <input type="hidden" id="Id" asp-for="Id" />
                <div class="mb-2">
                    <label asp-for="Name" class="control-label">Trainer's Name</label>
                    <input asp-for="Name" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="PhoneNumber" class="control-label">Trainer's Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" autocomplete="off" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Email" class="control-label">Trainer's Email</label>
                    <input asp-for="Email" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" name="action" value="Add" class="btn btn-primary" id="addButton">Add</button>
                    <button type="button" name="action" value="Delete" class="btn btn-danger"
                        id="deleteButton">Delete</button>
                </div>
            </form>
        </div>
        <div class="col-md-9">
            <h4>Trainers List</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var trainer in ViewBag.Trainers as IEnumerable<Gym_Mgt_System.Models.Trainer>)
                    {
                        <tr
                            onclick="populateForm('@trainer.Id', '@trainer.Name', '@trainer.PhoneNumber', '@trainer.Email')">
                            <td>@trainer.Name</td>
                            <td>@trainer.PhoneNumber</td>
                            <td>@trainer.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function populateForm(id, name, phone, email) {
            document.getElementById("Id").value = id;
            document.getElementById("Name").value = name;
            document.getElementById("PhoneNumber").value = phone;
            document.getElementById("Email").value = email;

            // Change button text to Save and Cancel
            document.getElementById("addButton").textContent = "Save";
            document.getElementById("addButton").value = "Save";
            document.getElementById("deleteButton").textContent = "Cancel";
            document.getElementById("deleteButton").value = "Cancel";
            document.getElementById("deleteButton").type = "button";
        }

        document.getElementById("deleteButton").addEventListener("click", function () {
            if (document.getElementById("deleteButton").value === "Cancel") {
                document.getElementById("trainerForm").reset();
                resetButtons();
            }
        });

        function resetButtons() {
            document.getElementById("addButton").textContent = "Add";
            document.getElementById("addButton").value = "Add";
            document.getElementById("deleteButton").textContent = "Delete";
            document.getElementById("deleteButton").value = "Delete";
            document.getElementById("deleteButton").type = "submit";
        }
    </script>
}
