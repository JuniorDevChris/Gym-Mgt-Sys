@model Gym_Mgt_System.ViewModels.EmployeeViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title text-center">Confirm Deletion</h3>
        </div>
        <div class="card-body text-center">
            <h3 class="mb-4">Are you sure you want to delete the following employee?</h3>
            <h4 class="text-dark">@Model.Name</h4>
            <div class="mt-4 d-flex justify-content-center align-items-center">
                <div class="p-3">
                    <form asp-action="DeleteConfirmed" asp-controller="Employee" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div>
                    <a asp-action="GetEmployees" class="btn btn-secondary">Cancel</a>
                </div>
            </div>

        </div>
    </div>
</div>
